{% block title %}{{ item.title }} - {{ site.name }}{% endblock %}

{% block style %}
<link rel="stylesheet" href="{{ static_url('css/app.css') }}">
{% endblock %}

{% block body %}
<div class="container">
  <header class="site-header">
    <div class="site-header-inner">
      <a href="{{ site.base_url }}" class="site-logo">{{ site.name }}</a>
      <nav class="site-nav">
        <a href="{{ site.base_url }}">Home</a>
        {% if site.posts_url %}
        <a href="{{ site.posts_url }}">Article</a>
        {% endif %}
        {% if site.audios_url %}
        <a href="{{ site.audios_url }}">Audio</a>
        {% endif %}
        <a href="{{ site.list_url }}">Archive</a>
        {% for link in site.primary_links %}
        <a href="{{ link.url }}"{% if link.blank %} target="_blank" rel="noopener"{% endif %}>{{ link.title }}</a>
        {% endfor %}
        <a href="{{ site.base_url }}feed.xml">RSS</a>
      </nav>
    </div>
  </header>

  <main class="site-main">
    <article>
      <header class="article-header">
        <h1 class="article-title">{{ item.title }}</h1>
        <div class="article-meta">
          <time datetime="{{ item.pub_date|xmldatetime }}">{{ item.pub_date.strftime('%Y-%m-%d') }}</time>
          {% if item.authors %}
          · 
          {% for author in item.authors %}
          <span>{{ author.name }}</span>{% if not loop.last %}, {% endif %}
          {% endfor %}
          {% endif %}
        </div>
      </header>

      <div class="article-content">
        {{ item.content|markdown|safe }}
      </div>

      {% if item.tags %}
      <div class="article-tags">
        {% for tag in item.tags %}
        <a href="{{ tag.url }}" class="tag">#{{ tag.name }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </article>
  </main>

  <footer class="site-footer">
    <p>Post with ❤️ by {{ site.name }}</p>
    {% if site.secondary_links %}
    <nav class="footer-nav">
      {% for link in site.secondary_links %}
      <a href="{{ link.url }}"{% if link.blank %} target="_blank" rel="noopener"{% endif %}>{{ link.title }}</a>
      {% endfor %}
    </nav>
    {% endif %}
  </footer>
</div>
{% endblock %}
