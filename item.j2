{% block title %}{{ page.title }} - {{ site.name }}{% endblock %}

{% block style %}
<link rel="stylesheet" href="{{ static_url }}minimal.css">
{% endblock %}

{% block body %}
<header class="site-header">
  <nav class="nav">
    <a href="/">Home</a>
    <a href="/feed/">RSS</a>
  </nav>
</header>
<main class="container">
  <article class="post">
    <h1 class="post-title">{{ page.title }}</h1>
    <div class="post-meta">
      <time datetime="{{ page.published_at|xmldatetime }}">{{ page.published_at.strftime('%Y-%m-%d') }}</time>
      {% if page.tags %}
      · {% for tag in page.tags %}<a class="tag" href="{{ tag.url }}">#{{ tag.title }}</a>{% if not loop.last %} {% endif %}{% endfor %}{% endif %}
    </div>
    {% from "macros.j2" import render_subject_content, render_subject_authors %}
    {{ render_subject_content(site, page) }}
    {{ render_subject_authors(site, page) }}
    {% include "_snippets/subject_share.j2" %}
    {% include "_snippets/subject_foot.j2" %}
  </article>
  <nav class="pager">
    {% if query.previous_subject(page) %}
    {% set prev = query.previous_subject(page) %}
    <a class="prev" href="{{ prev.url }}">← {{ prev.title }}</a>
    {% endif %}
    {% if query.next_subject(page) %}
    {% set next = query.next_subject(page) %}
    <a class="next" href="{{ next.url }}">{{ next.title }} →</a>
    {% endif %}
  </nav>
</main>
<footer class="site-footer">
  {% include "_snippets/site_foot.j2" %}
</footer>
{% endblock %}
