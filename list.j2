{% block style %}
<link rel="stylesheet" href="{{ static_url('css/app.css') }}">
{% endblock %}

{% block body %}
<div class="container">
  <header class="site-header">
    <div class="site-header-inner">
      <a href="{{ site.base_url }}" class="site-logo">{{ site.name }}</a>
      <nav class="site-nav">
        <a href="{{ site.base_url }}">Home</a>
        {% if site.posts_url %}
        <a href="{{ site.posts_url }}">Article</a>
        {% endif %}
        {% if site.audios_url %}
        <a href="{{ site.audios_url }}">Audio</a>
        {% endif %}
        <a href="{{ site.list_url }}">Archive</a>
        {% for link in site.primary_links %}
        <a href="{{ link.url }}"{% if link.blank %} target="_blank" rel="noopener"{% endif %}>{{ link.title }}</a>
        {% endfor %}
        <a href="{{ site.base_url }}feed.xml">RSS</a>
      </nav>
    </div>
  </header>

  <main class="site-main">
    {% if tag %}
    <h1 class="page-title">标签: {{ tag.name }}</h1>
    {% elif author %}
    <h1 class="page-title">作者: {{ author.name }}</h1>
    {% elif query.category %}
    <h1 class="page-title">分类: {{ query.category }}</h1>
    {% else %}
    <h1 class="page-title">长文 · 精心整理</h1>
    {% endif %}

    {% if page.items %}
    <ul class="post-list">
      {% for item in page.items %}
      <li class="post-item">
        <time class="post-date" datetime="{{ item.pub_date|xmldatetime }}">
          {{ item.pub_date.strftime('%Y-%m-%d') }}
        </time>
        <a href="{{ item.url }}" class="post-title-link">{{ item.title }}</a>
      </li>
      {% endfor %}
    </ul>
    {% else %}
    <p>暂无文章</p>
    {% endif %}

    {% if page.has_prev or page.has_next %}
    <nav class="pagination">
      {% if page.has_prev %}
      <a href="{{ page.prev_url }}">← 上一页</a>
      {% endif %}
      <span class="current">第 {{ page.page }} 页</span>
      {% if page.has_next %}
      <a href="{{ page.next_url }}">下一页 →</a>
      {% endif %}
    </nav>
    {% endif %}
  </main>

  <footer class="site-footer">
    <p>Post with ❤️ by {{ site.name }}</p>
    {% if site.secondary_links %}
    <nav class="footer-nav">
      {% for link in site.secondary_links %}
      <a href="{{ link.url }}"{% if link.blank %} target="_blank" rel="noopener"{% endif %}>{{ link.title }}</a>
      {% endfor %}
    </nav>
    {% endif %}
  </footer>
</div>
{% endblock %}
