{% block title %}{{ page.title }} - {{ site.name }}{% endblock %}

{% block style %}
<link rel="stylesheet" href="{{ static_url }}minimal.css">
{% endblock %}

{% block body %}
<header class="site-header">
  <nav class="nav">
    <a href="/">Home</a>
    <a href="/feed/">RSS</a>
  </nav>
</header>
<main class="container">
  <article class="post">
    <h1 class="post-title">{{ page.title }}</h1>
    <div class="post-content">
      {{ page.render_html() }}
    </div>
  </article>
</main>
<footer class="site-footer">
  {% include "_snippets/site_foot.j2" %}
</footer>
{% endblock %}
